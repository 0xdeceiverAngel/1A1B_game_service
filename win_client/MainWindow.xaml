        <Label Content="Message" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="311,18,0,0" Grid.Column="1" RenderTransformOrigin="-0.387,0.564" Height="55" Width="111"/>
        <Button x:Name="creat_room_btn" Content="Creat room" HorizontalAlignment="Left" Margin="31,125,0,0" VerticalAlignment="Top" Width="179" Height="36" FontSize="14" Click="creat_room_btn_click" Grid.Column="1"/>

    </Grid>
</Window>
